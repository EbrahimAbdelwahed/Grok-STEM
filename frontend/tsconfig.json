{
  "compilerOptions": {
    "target": "ESNext", // Use latest target
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Or "node" if preferred
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Correct JSX setting

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Types */
    "types": ["vite/client", "node"] // Ensure 'node' is included for polyfills/path
  },
  "include": ["src"], // Include only 'src'
  "references": [{ "path": "./tsconfig.node.json" }] // Optional: If using separate node config
}